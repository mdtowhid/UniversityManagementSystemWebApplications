@model UniversityManagementSystemApp.Areas.Test.Models.Test

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
   
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @if (ViewBag.Error != null)
    {
        <h3>@ViewBag.Error</h3>
    }
    else
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Test</h4>
                <hr />
                @Html.ValidationSummary(false)

                <div class="form-group">
                    @Html.LabelFor(model => model.Tag, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="text" name="Tag" id="tag" />
                        @Html.ValidationMessageFor(model => model.Tag)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" id="submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    }


    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    <script>
        $(document).ready(function () {

        });
    </script>
</body>
</html>
